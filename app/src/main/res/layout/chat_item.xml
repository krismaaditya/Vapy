<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:paddingTop="10dp">

    <TextView
        android:id="@+id/nickpengirimTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="nicknamepengirim" />

    <LinearLayout
        android:id="@+id/pengirimBubble"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/nickpengirimTV"
        android:layout_marginTop="13dp"
        android:background="@drawable/black_button_bg"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/isipesan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="isi pesan"
            android:textColor="@android:color/white" />
    </LinearLayout>

</RelativeLayout>